<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:paddingBottom="@dimen/pad_20dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/pad_5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/review_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/pad_5dp"
                    android:paddingLeft="@dimen/pad_10dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/review_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/review_content"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="italic" />


            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>
</LinearLayout>