<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_trailer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/card_view_image_size"
                android:layout_height="@dimen/card_view_image_size"
                android:background="@color/colorPrimary"
                android:scaleType="centerCrop"
                tools:background="@color/colorPrimary"
                android:contentDescription="@string/trailer_thumbnail_string" />

            <ImageView
                android:layout_width="@dimen/pad_40dp"
                android:layout_height="@dimen/pad_40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_circle_filled_white_red_400_24dp"
                android:contentDescription="@string/trailer_play_button_thumbnail_string" />

        </RelativeLayout>


</android.support.v7.widget.CardView>