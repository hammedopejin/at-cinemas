<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutView" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/activity_layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_layout_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_layout_margin</item>
    </style>

    <style name="LayoutViewBottom" parent="LayoutView">
        <item name="android:layout_marginBottom">@dimen/activity_layout_margin</item>
    </style>

    <style name="TextViewStyle" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/activity_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_layout_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FF0000</item>
    </style>

</resources>
